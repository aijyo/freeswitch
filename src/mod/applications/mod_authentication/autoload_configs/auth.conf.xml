<configuration name="auth.conf" description="auth Config">
  <settings>
    <param name="account_bk_image" value="$${base_dir}/images/auth_account_bk_image.png"/>
    <param name="passwd_bk_image" value="$${base_dir}/images/auth_passwd_bk_image.png"/>
    <param name="failed_bk_image" value="$${base_dir}/images/auth_account_bk_image.png"/>
	<!-- fg:bg:font_face:fontsz:text: -->
    <param name="auth_text_format" value="#1f1f1f:#daffff::30:%s:"/>
    <param name="auth_failed_format" value="#fca454:transparent::20:auth failed,code[%d], desc[%s]:"/>
	 <!-- 0 means use code default -->
    <param name="text_x" value="0"/>
    <param name="text_y" value="0"/>
    <param name="text_w" value="400"/>
    <param name="text_h" value="100"/>
    <param name="failed_text_x" value="0"/>
    <param name="failed_text_y" value="0"/>
    <param name="failed_text_w" value="0"/>
    <param name="failed_text_h" value="0"/>
	
    <param name="retry_count" value="3"/>
    <param name="first_timeout" value="300000"/>
    <param name="digit_timeout" value="200000"/>
    <param name="abs_timeout" value="0"/>
	<!-- value[0, 30) -->
    <param name="min_account_count" value="5"/>
    <param name="max_account_count" value="15"/>
    <param name="min_passwd_count" value="5"/>
    <param name="max_passwd_count" value="15"/>
  </settings>

</configuration>